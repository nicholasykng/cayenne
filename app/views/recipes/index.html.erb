<h1>All Recipes Posted by Our Users</h1>

<ul>
<% @recipes.each do |recipe| %>
    <li><%= link_to recipe.title, recipe_path(recipe) %></li>
<% end %>
</ul>

<div>
    <h3>Filter Recipes By User:</h3>
    <%= form_tag("/recipes", method: 'get') do %>
        <%= select_tag "user", options_from_collection_for_select(@users, "id", "name"), include_blank: true %>
        
    
    <h3>Order By Creation Date:</h3>
    <%= select_tag "date", options_for_select(['Ascending', "Descending"]), include_blank: true %>

    <%= submit_tag "Filter" %>
    <% end %>
</div>
