<%= form_for @recipe do |f| %>
    <%= render partial: "users/error", locals: {error_term: @recipe} %>
    <%= f.label "Title of Recipe" %><br>
    <%= f.text_field :title %><br>
    <%= f.label "Level of Difficulty (Easy, Intermediate or Advanced)" %><br>
    <%= f.text_field :level %><br>
    <%= f.label "Cook Time (Please include minutes and/or hour required)" %><br>
    <%= f.text_field :cook_time %><br>
    <%= f.label "Serving Size (Please enter the number of servings)" %><br>
    <%= f.text_field :serving_size %><br>
    <%= f.label "Ingredients List(Please list out all ingredients including the quantity)" %><br>
    <%= f.text_area :ingredients_list %><br>
    <%= f.label "Directions (Please list out the directions in a numbered list)" %><br>
    <%= f.text_area :directions %><br>
    <%= f.label "Categories (Please select the applicable categories or add a new category by typing the category in the field)" %><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
    <%= f.fields_for :categories, @recipe.categories.build do |categories_field| %>
        <%= categories_field.label "Add a Unique Category:" %><br>
        <%= categories_field.text_field :name %><br>
    <% end %>
    <%= f.label "Ingredients Selection(Please select the applicable ingredients or add a new ingredient by typing the ingredient in the field)" %><br>
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %><br><br>
    <%= f.fields_for :ingredients, @recipe.ingredients.build do |ingredients_field| %>
        <%= ingredients_field.label "Add a Unique Ingredient:" %><br>
        <%= ingredients_field.text_field :name %><br>
    <% end %>
    <%= f.submit "Submit Recipe" %>
<% end %>